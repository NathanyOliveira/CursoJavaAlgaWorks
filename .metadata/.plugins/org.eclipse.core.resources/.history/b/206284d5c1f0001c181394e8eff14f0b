import java.util.Scanner;

public class PrimeiroMetodo {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		imprimirTraco();
		
		String[]cursos = new String[] {"Java EE", "Spring", "Java OO Avançado"};
		
		System.out.println("Escolha dentre os cursos abaixo: ");
		
		for(int i = 0; i < cursos.length; i++) {
			System.out.println("[" + i + "]" + cursos[i]);
		}
		
		System.out.println("O curso desejado é o: ");
		Integer posicaoCursoEscolhido = scanner.nextInt();
		
		Boolean posicaoValida = posicaoCursoEscolhido >= 0 && posicaoCursoEscolhido < cursos.length;
		
		if(!posicaoValida) {
			System.err.println("Posição inválida");
			System.exit(1);
		}
		
		imprimirTraco();
		
		String[] formasPagamento = new String[] {"Cartão", "Boleto", "Pix"};
		
		System.out.println("Escolha dentre as formas de pagamento abaixo: ");
		
		for(int i = 0; i < formasPagamento.length; i++) {
			System.out.println("Opção de pagamento desejada: ");
			Integer posicaoPagamentoEscolhido = scanner.nextInt();
			
		posicaoValida = posicaoPagamentoEscolhido >= 0 && posicaoPagamentoEscolhido < formasPagamento.length;
		
		if(!posicaoValida) {
			System.err.println("Posição inválida");
			System.exit(1);
		}
		String cursoEscolhido = cursos[posicaoCursoEscolhido];
		String formaPagamentoEscolhida = formasPagamento[posicaoPagamentoEscolhido];
		
		imprimirTraco();
		}
		
		scanner.close();
	}
	static void imprimirTraco(){
		System.out.println("-----------------------------");
	}
}
